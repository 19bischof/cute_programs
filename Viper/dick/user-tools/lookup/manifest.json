{
  "manifest_version": 2,
  "name": "Dictionary Lookup Extension",
  "version": "1.0",
  "description": "Lookup definitions with a popup on double click.",
  "applications": {
    "gecko": {
      "id": "lookup@dictionary.com"
    }
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content_script.js"],
    "run_at": "document_end"
  }],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}