{
  "manifest_version": 2,
  "name": "Quick dic",
  "version": "1.44",
  "description": "Speedy dictionary lookup with a nice popup on double click",
  "icons": {
    "96": "icons/x96.png"
  },
  "applications": {
    "gecko": {
      "id": "lookup@dictionary.com"
    }
  },
  "permissions": [
    "<all_urls>",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "userscript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "dictionary.json"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
